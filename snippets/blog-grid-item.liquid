<div class="blog-post">
  <div class="blog-main-img">
    <a href="{{ article.url }}" class="blog-img">
      {%- if article.image -%}
      {{ article.image.src | image_url: width: 625, height: 465, crop: 'center' | image_tag:
        loading: 'lazy',
        width: article.image.width,
        height: article.image.height,
        class: "img-fluid",
        widths: "625",
        alt: article.image.alt | escape }}
      {%- else -%}
      {%- capture placeholder -%}collection-{% cycle 1, 2, 3, 4, 5, 6 %}{%- endcapture -%}
      {{ placeholder | placeholder_svg_tag: 'placeholder-svg' }}
      {%- endif -%}
    </a>
    <div class="blog-date">
      <span class="date-time">{{ article.published_at | date: '<span class="date">%d</span> <span class="month">%b</span> <span class="year">%y</span>' }}</span>
    </div>
  </div>
  <div class="blog-post-content">
    <div class="blog-title">
      <h6 class="title">
        <a href="{{ article.url }}">{{ article.title | truncate: 100 }}</a>
      </h6>
    </div>
    <div class="blog-description">
      <p class="description">{{ article.content | strip_html | strip | truncate: 75 | remove: "." }}</p>
    </div>
    <div class="read-btn-buttol">
      <a href="{{ article.url }}" class="read-btn btn {% if settings.slider_button_style == 'btn-style1' %}btn-style{% elsif settings.slider_button_style == 'btn-style2' %}btn-style2{% else %}btn-style3{% endif %}" aria-label="Read more: {{ article.title }}">
        <span>{{ settings.blog_read_btn }}</span>
      </a>
    </div>
  </div>
</div>