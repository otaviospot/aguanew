<!-- header-area start -->
<section class="header-kaj">
    <div class="header-area">
      <div class="header-main-area">
        <div class="container">
          <div class="header-main">
              <div class="header-element logo-wrap">
                {%- render 'company-logo' -%}
              </div>
              <div class="header-element search-wrap">
                {%- render 'search-bar', section: section -%}
              </div>
              <div class="header-element right-block">
                {%- render 'header-icon', section: section -%}
              </div>
          </div>
        </div>
      </div>
      <div class="header-bottom-wrap">
        <div class="container">
          <div class="menu-rightblock">
            <div class="megamenu-block">
              <nav class="main-navigation">
                <div class="megamenu-content">
                  <ul class="main-menu">
                    {% assign header_main_menu = section.settings.header_main_menu %}
                    {% for link in linklists[header_main_menu].links %}
                    {% if linklists[header_main_menu].links != '' %}
                    {% render 'main-menu', link: link %}
                    {% endif %}
                    {% endfor %}
                  </ul>
                </div>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="mobile-menu">
      <div class="main-menu-area">
        <nav class="main-navigation">
            <div class="box-header">
                <button class="close-box" type="button"><i class="ri-close-line"></i></button>
            </div>
            <div class='header-offer-text'>
              {% if section.settings.offer_text_1 != '' %}
              <span class="text-1">{{ section.settings.offer_text_1 }}</span>
              {% endif %}
              {% if section.settings.offer_text_2 != '' %}
              <span class="text-2">{{ section.settings.offer_text_2 }}</span>
              {% endif %}
            </div>
            <div class="megamenu-content">
              <ul class="main-menu">
                  {%- liquid
                  assign header_main_menu = section.settings.header_main_menu
                  for link in linklists[header_main_menu].links
                  if linklists[header_main_menu].links != ''
                  render 'main-menu', link: link
                  endif
                  endfor
                  -%}
              </ul>
            </div>
        </nav>
        <div class="custom-info-block">
          <div class="custom-info-item">
            {% if section.settings.info_1_icon != '' %}
            <div class="info-icon">
              <span class="icon"><i class="{{ section.settings.info_1_icon }}"></i></span>
            </div>
            {% endif %}
            <div class="info-content">
              {% if section.settings.info_1_label != '' %}
              <span class="label">{{ section.settings.info_1_label }}</span>
              {% endif %}
              {% if section.settings.info_1_text != '' %}
              {{ section.settings.info_1_text }}
              {% endif %}
            </div>
          </div>
          <div class="custom-info-item">
            {% if section.settings.info_2_icon != '' %}
            <div class="info-icon">
              <span class="icon"><i class="{{ section.settings.info_2_icon }}"></i></span>
            </div>
            {% endif %}
            <div class="info-content">
              {% if section.settings.info_2_label != '' %}
              <span class="label">{{ section.settings.info_2_label }}</span>
              {% endif %}
              {% if section.settings.info_2_text != '' %}
              {{ section.settings.info_2_text }}
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
</section>
{%- render 'search-popup-modal' -%}
{% render 'mini-cart-drawer' %}
