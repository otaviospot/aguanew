<section class="custom-video-text">
	<div class="container">
		<div class="row">
			<div class="col">
				<div class="video-text-block">
					<div class="custom-content">
						<div class="content-area">
							<div class="section-capture">
								<div class="section-title">
									{% if section.settings.subtitle != '' %}
									<span class="subtitle" style="color: {{ section.settings.subtitle_color }}">{{ section.settings.subtitle }}</span>
									{% endif %}
									{% if section.settings.title != '' %}
									<h2 class="title" style="color: {{ section.settings.title_color }}">{{ section.settings.title }}</h2>
									{% endif %}
								</div>
							</div>
							{% if section.settings.description != '' %}
							<p class="desc">{{ section.settings.description }}</p>
							{% endif %}
							{% if section.settings.button_text != '' %}
							<a href="{{ section.settings.button_url }}" class="block-button btn {% if section.settings.category_special_button_style == 'btn-style1' %}btn-style{% elsif section.settings.category_special_button_style == 'btn-style2' %}btn-style2{% else %}btn-style3{% endif %}">{{ section.settings.button_text }}</a>
							{% endif %}
						</div>
					</div>
					<div class="custom-video">
						<div class="video-block">
							<a href="{{ section.settings.video_url }}" class="video-btn play-button popup-youtube">
                {%- if block.settings.video_image -%}
                {{ block.settings.video_image | image_url: width: 1024 | image_tag:
                  loading: 'lazy',
                  width: block.settings.video_image.width,
                  height: block.settings.video_image.height,
                  class: "img-fluid",
                  alt: block.settings.video_image.alt | escape }}
                {%- else -%}
                {%- capture placeholder -%}collection-{% cycle 1, 2, 3, 4, 5, 6 %}{%- endcapture -%}
                {{ placeholder | placeholder_svg_tag: 'placeholder-svg' }}
                {%- endif -%}
								<span class="icon"><i class="feather-play"></i></span>
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

